<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/cell_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:visibility="visible">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/cardview_detail_schedule"
                android:weightSum="8.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="horizontal"
                    android:background="#5A4D94">
                    <LinearLayout
                        android:id="@+id/tab_back_updatecourse"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:background="@drawable/icon_back"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/sche_text_title"
                        android:text="Toán cao cấp A1"
                        android:gravity="center" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="40dp"
                        android:id="@+id/time_layout">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/sche_text_title"
                            android:textColor="@color/text_title"
                            android:text=""
                            android:paddingLeft="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/time_layout"
                        android:layout_toLeftOf="@+id/tem"
                        android:paddingTop="40dp"
                        android:id="@+id/teacher_layout">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/sche_text_view"
                            android:textColor="@color/text_title"
                            android:text="@string/sche_name_teacher"
                            android:paddingBottom="@dimen/padding_text_image"
                            android:paddingLeft="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/sche_text_view"
                            android:textColor="@color/text_title"
                            android:text="Văn Khánh"
                            android:paddingLeft="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/tem"
                        android:paddingTop="40dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/sche_text_view"
                            android:textColor="@color/text_title"
                            android:text="@string/sche_status"
                            android:paddingLeft="10dp"
                            android:paddingBottom="@dimen/padding_text_image"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/sche_text_view"
                            android:textColor="@color/text_title"
                            android:text="Còn học"
                            android:paddingLeft="10dp"/>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_view_course"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:background="@drawable/cardview_detail_schedule">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/sche_color_view"
                        android:textSize="@dimen/sche_text_view"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="@string/sche_address"/>
                    <EditText
                        android:id="@+id/edt_course_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:text=""
                        android:background="@null"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_view_course"
                    android:weightSum="10"
                    android:background="@drawable/cardview_detail_schedule">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:textColor="@color/sche_color_view"
                        android:textSize="@dimen/sche_text_view"
                        android:text="@string/sche_start_time"/>
                    <TextView
                        android:id="@+id/tv_course_starttime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="12/12/2012"
                        android:textColor="@color/sche_color_view"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:id="@+id/tab_setstart_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:background="@drawable/icon_select_time"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_view_course"
                    android:weightSum="10"
                    android:background="@drawable/cardview_detail_schedule">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:textColor="@color/sche_color_view"
                        android:textSize="@dimen/sche_text_view"
                        android:gravity="center_vertical"
                        android:text="@string/sche_end_time"/>
                    <TextView
                        android:id="@+id/tv_course_endtime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="12/12/2012"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="@color/sche_color_view"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:id="@+id/tab_setendtime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:background="@drawable/icon_select_time"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_view_course"
                    android:weightSum="10"
                    android:background="@drawable/cardview_detail_schedule">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:textColor="@color/sche_color_view"
                        android:textSize="@dimen/sche_text_view"
                        android:text="Học phí"/>
                    <EditText
                        android:id="@+id/edt_course_tuition"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:layout_weight="7"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_view_course"
                    android:weightSum="10"
                    android:background="@drawable/cardview_detail_schedule"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/sche_color_view"
                        android:textSize="@dimen/sche_text_view"
                        android:text="Buổi 1"/>
                    <Spinner
                        android:id="@+id/spinner_course_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <TextView
                        android:id="@+id/tv_stime"
                        android:layout_width="0dp"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                    <LinearLayout
                        android:id="@+id/tab_sethours"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:paddingRight="5dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:background="@drawable/icon_time_hours"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tab_add_course_update"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imv_add_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:background="@drawable/icon_plus"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parent_linear_layout_update"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
</FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/card_update_course"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/update_course"
                android:gravity="center"/>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_delete_course"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/delete_course"
                android:gravity="center"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>