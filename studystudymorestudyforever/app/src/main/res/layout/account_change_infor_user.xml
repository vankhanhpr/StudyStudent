<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sizre_title_view"
                android:background="@drawable/sharp_title_child"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:textSize="@dimen/text_size_title"
                    android:gravity="center"
                    android:text="@string/info_user"
                    android:textColor="#000000"/>
            </LinearLayout>


            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refres_info_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:weightSum="10"
                    android:background="#dee9e1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingBottom="@dimen/pading"
                        android:paddingLeft="@dimen/pading_login"
                        android:paddingRight="@dimen/pading_login"
                        android:background="@drawable/cardview_detail_schedule"
                        android:layout_weight="1.2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:textColor="#000000"
                            android:text="@string/info_name"/>
                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:layout_weight="7"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingBottom="@dimen/pading"
                        android:paddingLeft="@dimen/pading_login"
                        android:paddingRight="@dimen/pading_login"
                        android:background="@drawable/cardview_detail_schedule"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:textColor="#000000"
                            android:text="@string/info_email"/>
                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:layout_weight="7"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingBottom="@dimen/pading"
                        android:paddingLeft="@dimen/pading_login"
                        android:paddingRight="@dimen/pading_login"
                        android:background="@drawable/cardview_detail_schedule"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:textColor="#000000"
                            android:text="@string/info_age"/>
                        <EditText
                            android:id="@+id/edt_age"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:layout_weight="7"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingBottom="@dimen/pading"
                        android:paddingLeft="@dimen/pading_login"
                        android:paddingRight="@dimen/pading_login"
                        android:background="@drawable/cardview_detail_schedule"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:textColor="#000000"
                            android:text="@string/info_phone"/>
                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:layout_weight="7"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:paddingBottom="@dimen/pading"
                        android:paddingLeft="@dimen/pading_login"
                        android:paddingRight="@dimen/pading_login"
                        android:background="@drawable/cardview_detail_schedule"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:textColor="#000000"
                            android:text="@string/info_address"/>
                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:layout_weight="7"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                    <LinearLayout
                        android:id="@+id/tab_change_info_user"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/pading"
                        android:paddingLeft="@dimen/pading_login"
                        android:paddingRight="@dimen/pading_login"
                        android:gravity="center"
                        android:background="@drawable/sharp_button"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/info_button_update_user"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_view_info_user"
                            android:textColor="#000000"/>
                    </LinearLayout>


            </LinearLayout>
             </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_changeinfouser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
