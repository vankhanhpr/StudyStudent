<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/sharp_title_child">
                <TextView
                    android:id="@+id/tv_title_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chọn tài khoản"
                    android:gravity="center"
                    android:textSize="16dip"
                    android:textColor="@color/sche_color_title"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_select_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/tab_cancel_account"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true">
                        <LinearLayout
                            android:id="@+id/tab_cancel_dialog_select"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hủy"
                                android:textColor="@color/sche_color_title"
                                android:textSize="16dp"
                                android:gravity="center"/>
                        </LinearLayout>
            </android.support.v7.widget.CardView>
            </RelativeLayout>
        </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_search_friend"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
</LinearLayout>
