<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/animation_list"
        android:gravity="center"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/sharp_title_layout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/title_welcom"
                android:textColor="@color/text_title"
                android:textSize="23dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="40dp"
            android:gravity="center"
            android:weightSum="10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vuốt ngang để chọn mục đích sử dung"
                android:gravity="center"
                android:textSize="@dimen/sche_text_view"
                android:textColor="@color/text_color_small"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:paddingTop="40dp"
            android:gravity="center"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="120dp"
                android:paddingRight="120dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/mviewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </android.support.v4.view.ViewPager>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
