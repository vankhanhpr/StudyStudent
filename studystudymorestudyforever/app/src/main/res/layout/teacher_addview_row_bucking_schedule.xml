<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_add_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardview_detail_schedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_view_course"
        android:weightSum="10"
        android:background="@drawable/cardview_detail_schedule"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_count_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/sche_color_view"
            android:textSize="@dimen/sche_text_view"
            android:text="Buá»•i 1"/>
        <Spinner
            android:id="@+id/sp_setdayofweek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/tv_course_time_child_view"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/tab_set_time_row"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingRight="5dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:background="@drawable/icon_time_hours"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_remove_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onDelete"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imv_remove_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:background="@drawable/icon_substract"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>