<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@drawable/sharp_title_child">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thêm giáo viên"
                    android:gravity="center"
                    android:textSize="16dip"
                    android:textColor="@color/sche_color_title"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/opaque_button">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edt_search_friend"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/tab_search"
                        android:focusable="true"
                        android:textSize="12dp"
                        android:hint="Nhập email"
                        android:background="@android:color/transparent"/>
                    <LinearLayout
                        android:id="@+id/tab_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:background="@drawable/icon_search" />
                     </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv">


                <RelativeLayout
                    android:id="@+id/tab_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_photo"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/icon_teacher_list"
                        android:layout_marginRight="16dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_name"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/text_view_student"
                        android:text="Nguyễn Văn Khánh"
                        android:textSize="@dimen/name_text_file" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/course_name"
                        android:text="Toán cao cáp A1"
                        android:textSize="@dimen/age_text_file"
                        android:paddingTop="6dp"
                        android:textColor="@color/text_view_student"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_below="@+id/person_name" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imv_add_friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:background="@drawable/icon_add_friend1"/>

                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/tab_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="6dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:background="@drawable/icon_no_find"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="30dp">
                <LinearLayout
                    android:id="@+id/tab_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xong"
                        android:textColor="@color/sche_color_title"
                        android:textSize="16dp"
                        android:gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_search_friend"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
</LinearLayout>
